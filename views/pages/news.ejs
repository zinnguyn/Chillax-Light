            <a href="/tin-tuc?page=<%= currentPage - 1 %>">Trang trước</a>
          <% } else { %>
            <span class="disabled">Trang trước</span>
          <% } %>
      
          <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
              <span class="current-page"><%= i %></span>
            <% } else { %>
              <a href="/tin-tuc?page=<%= i %>"><%= i %></a>
            <% } %>
          <% } %>
      
          <% if (currentPage < totalPages) { %>
            <a href="/tin-tuc?page=<%= currentPage + 1 %>">Trang sau</a>
          <% } else { %>
