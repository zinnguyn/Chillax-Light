<% layout('layouts/adminLayout') -%>

<h1><%= pageTitle %></h1>

<form action="<%= action %>" method="POST">
    <div class="form-group">
        <label for="name">Tên danh mục:</label>
        <input type="text" id="name" name="name" value="<%= category ? category.name : '' %>" required>
    </div>
    <div class="form-group">
        <label for="description">Mô tả:</label>
        <textarea id="description" name="description" rows="5"><%= category ? category.description : '' %></textarea>
    </div>
    <button type="submit" class="btn">Lưu danh mục</button>
    <a href="/admin/categories" class="btn" style="background-color: #6c757d;">Hủy</a>
</form>